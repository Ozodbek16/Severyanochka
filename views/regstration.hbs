<link rel="stylesheet" href="/style/regstration.css">

<div class="regstration">
  <div class="regstration_icon">
  </div>
  <div class="regstration_title">
    <div class="regstration_title_top">
      <h1>Регистрация</h1>
    </div>
    <div class="regstration_title_bottom">
      <h1>Обязательные поля</h1>
    </div>
  </div>
  <form action="/regstration" method="post" enctype="multipart/form-data">
    <div class="regstration_put_box">
      <div class="put_box">
        <label for="nomer">Телефон</label>
        <input type="tel" id="nomer" name="phone" placeholder="+7 912" required />
      </div>
      <div class="put_box">
        <label for="date">Дата рождения</label>
        <input type="date" id="date" name="date" placeholder="01.01.1980" required />
        {{!-- <div class="data_put">
          <i class="far fa-calendar"></i>
        </div> --}}

      </div>
    </div>
    <div class="regstration_put_box">
      <div class="put_box">
        <label for="familya">Фамилия</label>
        <input type="text" id="familya" name="surname" required />
      </div>
      <div class="put_box">
        <label for="region  ">Регион</label>
        <select name="region" id="" required>
          <option value="Uzbekistan">Коми</option>
          <option value="Amerika">Amerika</option>
          <option value="Russia">Russia</option>
          <option value="Kitay">Kitay</option>
        </select>
      </div>
    </div>
    <div class="regstration_put_box">
      <div class="put_box">
        <label for="name">Имя</label>
        <input type="text" required id="name" name="name" />
      </div>
      <div class="put_box">
        <label for="punkt  ">Населенный пункт</label>
        <select name="street" required id="punkt">
          <option value="Uzbekistan">Усть-Ижма</option>
          <option value="Amerika">Amerika</option>
          <option value="Russia">Russia</option>
          <option value="Kitay">Kitay</option>
        </select>
      </div>
    </div>
    <div class="regstration_put_box">
      <div class="put_box">
        <label for="parol">Пароль</label>
        <input type="password" id="parol" name="password" required />
        <div class="data_put" id="eye1">
          <i class="fas fa-eye-slash"></i>
        </div>
        <div class="data_put" id="eye2">
          <i class="fas fa-eye"></i>
        </div>
      </div>
      <div class="gender">
        <label for="pol">Пол</label>
        <div class="gender_box">
          <input type="radio" class="genders" id="man" name="gender" value="man" />
          <input type="radio" class="genders" id="woman" name="gender" value="woman" />
          <label for="man">
            <div class="gender_m" required id="gender_m">Мужской</div>
          </label>
          <label for="woman">
            <div class="gender_m" required id="gender_g">Женский</div>
          </label>
        </div>
      </div>
    </div>
    <div class="regstration_put_box">
      <div class="put_box">
        <label for="paroll">Повторите пароль</label>
        <input type="password" id="parols" name="paroll" required />
        <div class="data_put" id="eyes">
          <i class="fas fa-eye-slash"></i>
        </div>
        <div class="data_put" id="eyees">
          <i class="fas fa-eye"></i>
        </div>
      </div>

    </div>
    <div class="regstration_title">

      <div class="regstration_title_bottom">
        <h1>Необязательные поля</h1>
      </div>
    </div>
    <div class="regstration_put_box">
      <div class="put_box">
        <label for="karta">Номер карты</label>
        <input type="tel" id="karta" name="karta" placeholder="" />
      </div>
      <div class="put_box">
        <label for="date">E-mail</label>
        <input type="email" id="date" name="email" placeholder="" />

      </div>
    </div>
    <div class="regstration_put_box">
      <div class="put_box1">
        <input id="checkbox" type="checkbox" />
        <label for="checkbox">У меня нет карты лояльности</label>
      </div>
    </div>
    <input type="file" name="img" id="avatar">
    <div class="bottom_button">
      <button type="submit">Продолжить</button>
    </div>
  </form>

</div>
<script src="/script/script.js"></script>